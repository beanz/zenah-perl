
<p>[%message%]</p>
<form action="[% base _ '/devicecontrol/do_edit/' _ item.id %]"
      method="post">
  [% FOR column = column_order %]
    [% column %]<br/>
    [% IF column == 'definition' %]
      <textarea name="definition" cols="80" rows="4"
        >[% item.definition %]</textarea><br/>
    [% ELSE %]
      [% item.to_field(column).as_XML %]<br/>
   [% END %]
  [% END %]
  <input type="submit" value="Edit"/>
</form>
<hr/>
[% crudbutton("devicecontrol", "list", "") %]
